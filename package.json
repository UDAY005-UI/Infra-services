{
  "name": "infra-services",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,mjs,jsx.ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "start:dev": "turbo run start:dev",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,mjs,jsx,ts,tsx,md}": "prettier --write"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=18"
  }
}
